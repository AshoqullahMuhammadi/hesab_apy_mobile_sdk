<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for WebView Activity - extends AppCompat -->
    <style name="HesabPayWebViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    
    <!-- Translucent theme for result Activity -->
    <style name="HesabPayResultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
